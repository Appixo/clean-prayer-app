{
  "expo": {
    "name": "Namaz Vakitleri",
    "slug": "namaz-vakitleri-family",
    "scheme": "prayertime",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#f8fafc"
    },
    "notification": {
      "icon": "./assets/notification_icon.png",
      "color": "#2563EB"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.namazvakitleri.family",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Namaz Vakitleri, ezan vakitlerini doğru hesaplamak için konumunuza ihtiyaç duyar."
      }
    },
    "android": {
      "package": "com.namazvakitleri.family",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e3a8a"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_MEDIA_PLAYBACK",
        "POST_NOTIFICATIONS",
        "USE_EXACT_ALARM",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "backgroundColor": "#1a1a1a"
    },
    "extra": {
      "eas": {
        "projectId": "b1cba9c7-0da7-48c8-98ba-7dc4968a34f2"
      }
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification_icon.png",
          "color": "#3b82f6",
          "sounds": [
            "./assets/sounds/adhan.mp3"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Namaz Vakitleri, ezan vakitlerini doğru hesaplamak için konumunuza ihtiyaç duyar."
        }
      ],
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "PrayerTimesWidget",
              "label": "Namaz Vakitleri",
              "minWidth": "250dp",
              "minHeight": "130dp",
              "targetCellWidth": 4,
              "targetCellHeight": 2,
              "maxResizeWidth": "400dp",
              "maxResizeHeight": "220dp",
              "resizeMode": "horizontal|vertical",
              "description": "Sonraki namaz vaktini ve şehir bilgisini gösterir",
              "previewImage": "./assets/icon.png",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "NextPrayerWidget",
              "label": "Sonraki Namaz",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "maxResizeWidth": "200dp",
              "maxResizeHeight": "200dp",
              "resizeMode": "horizontal|vertical",
              "description": "Geri sayım, sonraki namaz adı ve saati",
              "previewImage": "./assets/icon.png",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "DailyScheduleWidget",
              "label": "Günlük Vakitler",
              "minWidth": "250dp",
              "minHeight": "250dp",
              "targetCellWidth": 4,
              "targetCellHeight": 4,
              "maxResizeWidth": "400dp",
              "maxResizeHeight": "400dp",
              "resizeMode": "horizontal|vertical",
              "description": "Tüm namaz vakitleri listesi",
              "previewImage": "./assets/icon.png",
              "updatePeriodMillis": 1800000
            }
          ]
        }
      ],
      "expo-build-properties",
      "./plugins/withAdhanAudio",
      "expo-localization"
    ]
  }
}